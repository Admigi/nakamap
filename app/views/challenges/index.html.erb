<div class="challenge-body">
  <div class="ag-format-container">

    <div class="ag-search-bar">
      <%= form_tag(search_challenges_path, method: :get) do %>
        <div class="search-container-cl">
          <button type="submit" class="search-icon">
            <ion-icon name="search-outline" style="font-size: 30px;"></ion-icon>
          </button>
          <%= text_field_tag :search, params[:search], placeholder: "Search...", class: "search-input" %>
        </div>
      <% end %>
    </div>
    <div class="ag-courses_box">
      <% @challenges.each do |challenge| %>
        <div class="ag-courses_item">
          <%= link_to challenge_path(challenge) do %>
            <div class="ag-courses-item_link">
              <div class="ag-courses-item_bg"></div>

              <div class="ag-courses-item_title">
                <%= challenge.name %>
              </div>

              <div class="ag-courses-item_date-box">
                Start:
                <span class="ag-courses-item_date">
                  <%= challenge.created_at.strftime('%d.%m.%Y') %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

